      Serial.print(".");
      counter++;
      if(counter>=60){ //30 seconds timeout - reset board
        ESP.restart();
      }
    }
    if (client.connect(host, 443)) {
      String url = "/api.asksensors/write/";
      url += apiKeyIn;
      url += "?module1=";
